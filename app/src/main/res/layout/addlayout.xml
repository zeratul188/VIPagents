<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp"
    android:background="#222222">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="인게임 닉네임"
                android:textColor="#aaaaaa"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtName"
                android:textColor="#f0f0f0"
                android:textSize="15sp"
                android:hint="유플레이 닉네임"
                android:textColorHint="#666666"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttoncustom"
                    android:text="아이디 저장"
                    android:id="@+id/btnSave"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"
                    android:textColor="#aaaaaa"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttoncustom"
                    android:text="불러오기"
                    android:id="@+id/btnInput"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#aaaaaa"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="레이드 종류"
                android:textColor="#aaaaaa"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"/>
            <RadioGroup
                android:id="@+id/rgType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/rdoIronHorse"
                    android:text="철마"
                    android:textColor="#f0f0f0"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:background="@drawable/radiocustom"
                    android:checked="true"
                    android:button="@null"
                    android:layout_marginRight="5dp"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:id="@+id/rdoDark"
                    android:text="칠흑의 시간"
                    android:textColor="#f0f0f0"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:background="@drawable/radiocustom"
                    android:checked="false"
                    android:button="@null"
                    android:layout_marginRight="5dp"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="네임드 역할"
                    android:textColor="#aaaaaa"
                    android:textSize="15sp"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공대장"
                    android:id="@+id/chkCommander"
                    android:buttonTint="#fe6e0e"
                    android:textColor="#f0f0f0"
                    android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNamed1"
                android:text="네임드1 - "
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/btnNamed1"
                android:background="@drawable/buttoncustom"
                android:text="없음"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNamed2"
                android:text="네임드2 - "
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/btnNamed2"
                android:background="@drawable/buttoncustom"
                android:text="없음"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNamed3"
                android:text="네임드3 - "
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/btnNamed3"
                android:background="@drawable/buttoncustom"
                android:text="없음"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNamed4"
                android:text="네임드4 - "
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/btnNamed4"
                android:background="@drawable/buttoncustom"
                android:text="없음"
                android:textColor="#aaaaaa"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="역할 수정하는 방법"
            android:textSize="17sp"
            android:textColor="#f0f0f0"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="변경하고자 하는 아이디를 입력한 후 다시 역할을 정한 후 추가버튼을 누르면 변경됩니다."
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="역할 삭제하는 방법"
            android:textSize="17sp"
            android:textColor="#f0f0f0"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레이드 종류를 선택한 후 변경하고자 하는 아이디를 입력한 후 제거버튼을 누르면 해당 레이드 역할이 삭제됩니다."
            android:textSize="14sp"
            android:textColor="#aaaaaa"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnRemove"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:background="@drawable/subbuttonhub"
            android:layout_gravity="center"
            android:text="제거"
            android:textSize="18sp"
            android:layout_marginRight="5dp"
            android:textColor="#aaaaaa"/>
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:background="@drawable/mainbuttonhub"
            android:layout_gravity="center"
            android:text="저장 / 변경"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="#FFBD8D"/>
    </LinearLayout>
</LinearLayout>