<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#222222">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용자 이름"
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#f0f0f0"
                    android:textColorHint="#666666"
                    android:id="@+id/edtName"
                    android:hint="사용자 이름"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnDouble"
                    android:text="중복 체크"
                    android:textSize="15sp"
                    android:textColor="#f0f0f0"
                    android:background="@drawable/buttonmaincustom"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="등급"
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="5dp"/>
            <RadioGroup
                android:id="@+id/rgGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdoGrade1"
                    android:drawableLeft="@drawable/difficulty1"
                    android:buttonTint="#fe6e0e"
                    android:drawablePadding="10dp"
                    android:textSize="17sp"
                    android:checked="true"
                    android:textColor="#f0f0f0"
                    android:text="수습 요원"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdoGrade2"
                    android:drawableLeft="@drawable/difficulty2"
                    android:buttonTint="#fe6e0e"
                    android:drawablePadding="10dp"
                    android:textSize="17sp"
                    android:textColor="#f0f0f0"
                    android:text="요원"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdoGrade3"
                    android:drawableLeft="@drawable/difficulty3"
                    android:buttonTint="#fe6e0e"
                    android:drawablePadding="10dp"
                    android:textSize="17sp"
                    android:textColor="#f0f0f0"
                    android:text="부관"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdoGrade4"
                    android:drawableLeft="@drawable/difficulty4"
                    android:buttonTint="#fe6e0e"
                    android:drawablePadding="10dp"
                    android:textSize="17sp"
                    android:textColor="#f0f0f0"
                    android:text="지휘관"/>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가입 날짜"
                android:textSize="12sp"
                android:textColor="#aaaaaa"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDate"
                    android:text="[2021년 2월 7일]"
                    android:textColor="#f0f0f0"
                    android:textSize="20sp"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnDate"
                    android:text="날짜 선택"
                    android:textSize="15sp"
                    android:textColor="#f0f0f0"
                    android:background="@drawable/buttonmaincustom"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnNow"
                    android:text="오늘"
                    android:textSize="15sp"
                    android:textColor="#aaaaaa"
                    android:background="@drawable/buttonsubcustom"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미접속 사유자"
                android:id="@+id/chkUnconnect"
                android:buttonTint="#fe6e0e"
                android:textColor="#f0f0f0"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutUnconnect"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미접속 시작 날짜"
                    android:textSize="12sp"
                    android:textColor="#aaaaaa"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtStartDate"
                        android:text="[2021년 2월 7일]"
                        android:textColor="#f0f0f0"
                        android:textSize="20sp"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:id="@+id/btnStartDate"
                        android:text="날짜 선택"
                        android:textSize="15sp"
                        android:textColor="#f0f0f0"
                        android:background="@drawable/buttonmaincustom"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미접속 기간"
                    android:textSize="12sp"
                    android:textColor="#aaaaaa"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#f0f0f0"
                    android:id="@+id/edtLength"
                    android:hint="미접속 기간 (숫자만 기입 가능)"
                    android:textColorHint="#666666"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/mainbuttonhub"
        android:layout_gravity="center"
        android:text="사용자 추가"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="#FFBD8D"/>
</LinearLayout>