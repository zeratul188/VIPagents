<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="날짜 선택"
        android:textColor="#aaaaaa"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/litelayoutcustom"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:layout_gravity="center"
            android:calendarTextColor="#f0f0f0"
            android:outlineSpotShadowColor="#f0f0f0"
            android:datePickerMode="spinner" />
    </LinearLayout>
    <Button
        android:id="@+id/btnChoice"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/mainbuttonhub"
        android:layout_gravity="center"
        android:text="선택"
        android:textSize="18sp"
        android:textColor="#FFBD8D"/>
</LinearLayout>