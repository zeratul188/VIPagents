<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp" />
            <solid android:color="#20FF7777" />
            <stroke
                android:width="1dp"
                android:color="#80444444"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp" />
            <solid android:color="#00222222" />
            <stroke
                android:width="1dp"
                android:color="#80bbbbbb"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <padding android:bottom="4dp" android:left="5dp" android:right="5dp" android:top="4dp" />
            <solid android:color="#80fe6e0e" />
            <stroke
                android:width="1dp"
                android:color="#00fe6e0e"/>
        </shape>
    </item>

</selector>